{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Qt: QML: Launch",
            "type": "qml",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/appwikipedia_qt"
        },
        {
            "name": "Qt Debug",
            "type": "lldb-dap",
            "preLaunchTask": "CMake: Debug Build",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/appwikipedia_qt",
            "cwd": "${workspaceFolder}",
            "args": [
                "-qmljsdebugger=host:localhost,port:13150,block,services:DebugMessages,QmlDebugger,V8Debugger"
            ]
        },
        {
            "name": "QML Debug: Attach",
            "type": "qml",
            "request": "attach",
            "host": "localhost",
            "port": "13150",
        }
    ],
    "compounds": [
        {
            "name": "Qt Debug + QML Debug",
            "configurations": ["Qt Debug", "QML Debug: Attach"]
        }
    ]
}