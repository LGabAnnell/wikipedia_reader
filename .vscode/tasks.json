{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Debug Build",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build -j 10",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project in Debug mode using CMake"
        },
        {
            "label": "CMake: Build tests",
            "type": "shell",
            "command": "cmake -DBUILD_TESTS=ON -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build -j 10",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build project with test files"
        },
        {
            "label": "CMake: Configure (Debug)",
            "type": "shell",
            "command": "cmake -B build -DDEBUG=ON -DCMAKE_BUILD_TYPE=Debug && cmake --build build -j 10",
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure the project in Debug mode using CMake"
        },
        {
