{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Debug Build",
            "type": "shell",
            "command": "cmake --build build --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project in Debug mode using CMake"
        },
        {
            "label": "CMake: Configure (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug",
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure the project in Debug mode using CMake"
        }
    ]
}